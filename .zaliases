# Aliases for Zsh (macOS optimized, with Omarchy-inspired tools)

# Directory navigation with zoxide (smarter cd)
alias z='zoxide'  # Use 'z proj' to jump to learned paths
alias ..='z ..'
alias ...='z ../..'
alias ....='z ../../..'
alias .....='z ../../../..'

# File listing with eza (replaces ls)
alias ls='eza -lh --group-directories-first --icons=auto --color=always'
alias lsa='ls -a'
alias l='eza -G --color=always --group-directories-first'
alias ll='eza -l --color=always --group-directories-first'
alias la='eza -la --color=always --group-directories-first'
alias lt='eza --tree --level=2 --long --icons=auto --git'
alias lta='lt -a'

# File searching and preview
alias rg='ripgrep --color=auto'  # Fast grep replacement
alias ff='fzf --preview "bat --style=numbers --color=always --line-range :500 {}"'  # Fuzzy file finder
alias fzh='fzf --preview "bat --style=numbers --color=always --line-range :500 ~/.zsh_history"'  # Fuzzy history
alias fd='fdfind'  # Fast find (Homebrew names it fdfind)
alias search='rg --files-with-matches'  # Search for files containing text

# File viewing with bat (enhanced cat)
alias cat='bat --style=auto'  # Syntax-highlighted cat
alias preview='bat --style=numbers --color=always'  # Explicit preview mode

# General shell utilities
alias python='python3'
alias password="openssl rand -base64 32"
alias cls='clear'
alias reload="exec $SHELL -l"
alias x="exit"

# Memory and disk usage for macOS
alias free="vm_stat | awk '/Pages free/ {print \"Free: \" \$3*4096/1024/1024 \"MB\"}'"
alias df='df -h'

# Networking tools
alias wget="curl -O"  # Use curl instead of wget
alias ping="ping -c 5"  # Ping with 5 packets only
alias nmap-fast="nmap -T4 -F"  # Quick network scan
alias myip="curl ifconfig.me"  # Get external IP
alias ports="netstat -tuln"  # Show open ports

# Editor (prefer nvim if installed)
command -v nvim &>/dev/null && alias vi='nvim'
n() { if [ "$#" -eq 0 ]; then nvim .; else nvim "$@"; fi; }

# Development tools
alias g='git'
alias d='docker'
alias r='rails'
alias lzg='lazygit'
alias lzd='lazydocker'

# Git aliases
alias gcm='git commit -m'
alias gcam='git commit -a -m'
alias gcad='git commit -a --amend'

# Zellij session management (fuzzy switching)
alias zj='zellij list | fzf | cut -d":" -f1 | xargs zellij attach'
alias zjk='zellij kill-pane -s $(zellij list-panes -f "{index}" | fzf)'

